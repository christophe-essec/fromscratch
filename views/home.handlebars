<div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
            <table class="table">
              <caption>Optional table caption.</caption>
              <thead>
                <tr> <th>#</th> <th>Client Name</th> <th>Action</th></tr>
              </thead>
              <tbody>
              	{{#each clients}}
                <tr><th scope="row">{{number}}</th> <td>{{name}}</td> <td><button type="button" class="btn btn-danger">Delete</button></td></tr>
               	{{/each}}
              </tbody>
            </table>

            <form class="form-inline" action="/newuser" method="post">
              <div class="form-group">
                <label for="exampleInputName2">Client Name</label>
                <input type="text" class="form-control" name="clientName" placeholder="Acme Corp"/>
              </div>
             
              <button type="submit" class="btn btn-default">Add Client</button>
            </form>
        </div>
      </div>
    </div>